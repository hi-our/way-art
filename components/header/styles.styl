.header
  background-color #000
  position fixed
  left 0
  right 0
  top 0

.header-content
  padding-top 1px
  // display flex
  // justify-content space-between
  // padding 14px 18px
  

.logo
  width 62px
  height 52px
  margin 4px auto
  & > a
    display block
    height 100%
    background url(https://image-hosting.xiaoxili.com/img/20200718193412.png) no-repeat
    background-size contain
    text-indent -9999px
    overflow hidden

.site-nav
  display flex
  // align-items center

  li
    flex 1

  a
    display block
    color #fff
    font-size 14px
    line-height 36px
    font-weight 600
    text-align center
    border-bottom 4px solid transparent

    &.nav-active
      color #0061FF
      border-color #0061FF



@media (min-width 1025px)
  
  .header
    margin-bottom 30px
  .header-content
    max-width 1200px
    margin 0 auto
    padding 30px 72px
    box-sizing border-box


  .logo
    width 104px
    height 98px

  .site-nav
    display flex
    align-items center

    li + li
      margin-top 0
      margin-left 72px

    a
      display block
      color #686868
      font-size 16px
      line-height 1.4
      font-weight 600

      &:hover
        color #000
