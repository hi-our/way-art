header
  display flex
  justify-content space-between
  padding 14px 18px


.logo
  width 80px
  height 80px
  
  & > a
    display block
    img
      max-width 100%
      height auto

.site-nav
  // display flex
  // align-items center

  li + li
    margin-top 8px

  a
    display block
    color #686868
    font-size 14px
    line-height 1.4
    font-weight 600

    &:hover
      color #000

@media (min-width 1025px)
  header
    padding 34px 0


  .logo
    width 104px
    height 104px

  .site-nav
    display flex
    align-items center

    li + li
      margin-left 72px

    a
      display block
      color #686868
      font-size 16px
      line-height 1.4
      font-weight 600

      &:hover
        color #000
