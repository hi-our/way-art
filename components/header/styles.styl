.header
  border-bottom 1px solid #F4F4F4
  margin-bottom 14px


.header-content
  display flex
  justify-content space-between
  padding 14px 18px
  

.logo
  width 80px
  height 80px
  
  & > a
    display block
    img
      max-width 100%
      height auto

.site-nav
  // display flex
  // align-items center

  li + li
    margin-top 8px

  a
    display block
    color #686868
    font-size 14px
    line-height 1.4
    font-weight 600

    &:hover
      color #000

@media (min-width 1025px)
  
  .header
    margin-bottom 30px
  .header-content
    max-width 1200px
    margin 0 auto
    padding 30px 72px
    box-sizing border-box


  .logo
    width 104px
    height 98px

  .site-nav
    display flex
    align-items center

    li + li
      margin-top 0
      margin-left 72px

    a
      display block
      color #686868
      font-size 16px
      line-height 1.4
      font-weight 600

      &:hover
        color #000
